// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model News {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  title           String    @unique @db.String
  contents        String[]
  closed_at       DateTime? @db.Timestamp
  created_at      DateTime  @default(now()) @db.Timestamp
  last_updated_at DateTime  @updatedAt @db.Timestamp
}

model Horse {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  name       String       @unique @db.String
  HorseEntry HorseEntry[]
}

model Jockey {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  name       String       @unique @db.String
  HorseEntry HorseEntry[]
}

enum CourseType {
  TURF
  DIRT
  JUMP
}

model HorseEntry {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  frame    Int
  number   Int
  horse    Horse   @relation(fields: [horseId], references: [id])
  horseId  String  @db.ObjectId
  jockey   Jockey  @relation(fields: [jockeyId], references: [id])
  jockeyId String  @db.ObjectId
  Race     Race?   @relation(fields: [raceId], references: [id])
  raceId   String? @db.ObjectId
}

model Race {
  id       String       @id @default(auto()) @map("_id") @db.ObjectId
  name     String       @unique @db.String
  date     DateTime     @db.Timestamp
  order    Int
  course   CourseType
  distance Int
  horses   HorseEntry[]
}

enum TicketType {
  WIN
  PLACE
  EXACTA
  TIERCE
}

model BettingTicket {
  id   String     @id @default(auto()) @map("_id") @db.ObjectId
  type TicketType
}
