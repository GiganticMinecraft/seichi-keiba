// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model News {
  id              String    @id
  title           String    @unique
  contents        String
  closed_at       DateTime?
  created_at      DateTime  @default(now())
  last_updated_at DateTime  @updatedAt

  @@unique([title, contents])
}

model Horse {
  id            String       @id
  name          String       @unique
  horse_entries HorseEntry[]
}

model Jockey {
  id            String       @id
  name          String       @unique
  horse_entries HorseEntry[]
}

enum CourseType {
  TURF
  DIRT
  JUMP
}

model HorseEntry {
  id        String @id
  frame     Int
  number    Int
  horse     Horse  @relation(fields: [horse_id], references: [id])
  horse_id  String
  jockey    Jockey @relation(fields: [jockey_id], references: [id])
  jockey_id String
  race      Race   @relation(fields: [race_id], references: [id])
  race_id   String

  @@unique([race_id, frame, number])
  @@unique([race_id, horse_id])
  @@unique([race_id, jockey_id])
}

model Race {
  id       String       @id
  name     String       @unique
  date     DateTime
  order    Int
  course   CourseType
  distance Int
  horses   HorseEntry[]

  @@unique([date, order])
}

enum TicketType {
  WIN
  PLACE
  EXACTA
  TIERCE
}

model BettingTicket {
  id   String     @id @unique
  type TicketType
}
