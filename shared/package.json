{
  "name": "@gigantic-minecraft/seichi-keiba-shared",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "./dist/**/*.d.ts",
    "./dist/**/*.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/GiganticMinecraft/seichi-keiba.git",
    "directory": "shared"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "codegen": "yarn codegen:client && yarn codegen:server",
    "codegen:watch": "yarn codegen:client:watch & yarn codegen:server:watch",
    "codegen:client": "graphql-codegen --config ./src/apollo/codegen-client.yml",
    "codegen:client:watch": "yarn codegen:client --watch",
    "codegen:server": "graphql-codegen --config ./src/apollo/codegen-server.yml",
    "codegen:server:watch": "yarn codegen:server --watch"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/cli": "^2.6.4",
    "@graphql-codegen/typed-document-node": "^2.2.13",
    "@graphql-codegen/typescript": "^2.5.1",
    "@graphql-codegen/typescript-operations": "^2.4.2",
    "@graphql-codegen/typescript-resolvers": "^2.6.6",
    "eslint": "^8.19.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.1.1",
    "graphql": "^16.5.0"
  }
}
